<%- include('../partials/body-start'); %>

<main>
    <div class="jumbotron">
        <h2>New Avatar</h2>
        <form action="/avatars" method="POST">
            <p>
                <label>
                    Name :
                    <input type="text" placeholder="Name of avatar" name="name">
                </label>
            </p>
            <p>
                <label>
                    Description :
                    <input type="text" placeholder="Description of avatar" name="description">
                </label>
            </p>
            <button type="submit" style="align-items: center">Add an avatar</button>
        </form>
    </div>
</main>

<%- include('../partials/body-end'); %>